{
  "variables": {},
  "builders": [{
    "type": "arm",
    "file_urls" : ["http://os.archlinuxarm.org/os/ArchLinuxARM-odroid-latest.tar.gz"],
    "file_checksum_url": "http://os.archlinuxarm.org/os/ArchLinuxARM-odroid-latest.tar.gz.md5",
    "file_checksum_type": "md5",
    "file_unarchive_cmd": ["bsdtar", "-xpf", "$ARCHIVE_PATH", "-C", "$MOUNTPOINT"],
    "file_target_extension": "tar.gz",
    "image_build_method": "new",
	"image_path": "odroid-u3.img",
	"image_size": "2G",
    "image_type": "dos",
	"image_partitions": [
		{
			"name": "root",
			"type": "83",
			"start_sector": "4096",
			"filesystem": "ext4",
			"size": "0",
            "mountpoint": "/"
		}
	],
	"qemu_binary_source_path": "/usr/bin/qemu-arm-static",
	"qemu_binary_destination_path": "/usr/bin/qemu-arm-static"
  }],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "pacman-key --init",
        "pacman-key --populate archlinuxarm"
      ]
    }
  ],
  "post-processors": []
}
